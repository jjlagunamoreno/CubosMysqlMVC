@model IEnumerable<PracticaCubosMVC.Models.Cubo>

<h2>❤️ Favoritos</h2>

@if (!Model.Any())
{
    <p>No hay cubos en favoritos.</p>
}
else
{
    <div class="row">
        @foreach (var cubo in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="~/images/@cubo.Imagen" class="card-img-top" alt="@cubo.Nombre" style="height: 200px; object-fit: cover;" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@cubo.Nombre</h5>
                        <p class="card-text">Precio: $@cubo.Precio</p>
                    </div>
                </div>
            </div>
        }
    </div>
}

<a asp-action="ClearFavorites" class="btn btn-danger">Eliminar Favoritos</a>
