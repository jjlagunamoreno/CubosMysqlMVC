@model PracticaCubosMVC.Models.Cubo

@{
    ViewData["Title"] = "Detalles del Cubo";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <img src="~/images/@Model.Imagen" class="card-img-top" alt="@Model.Nombre" style="height: 200px; object-fit: cover;">
    <div class="card-body">
        <h5 class="card-title">@Model.Nombre</h5>
        <p class="card-text">
            <strong>Modelo:</strong> @Model.Modelo <br />
            <strong>Marca:</strong> @Model.Marca <br />
            <strong>Precio:</strong> $@Model.Precio
        </p>
        <a asp-action="Index" class="btn btn-primary">Volver</a>
    </div>
</div>
